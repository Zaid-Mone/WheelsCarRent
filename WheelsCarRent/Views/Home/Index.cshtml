<!-- FeedBack Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <h1 class="display-1 text-primary text-center"></h1>
        <h1 class="display-4 text-uppercase text-center mb-5"> Send your Feed Back </h1>
        <div class="row">
            <div class="col-lg-12 mb-2">
                <div class="contact-form bg-light mb-4" style="padding: 30px;">
                    <form asp-action="Create" asp-controller="FeedBack">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.FeedBack.Name" class="control-label"></label>
                            <input asp-for="@Model.FeedBack.Name" class="form-control p-4" required="required"  placeholder="Your Name"/>
                            <span asp-validation-for="@Model.FeedBack.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.FeedBack.Message" class="control-label"></label>
                            <textarea asp-for="@Model.FeedBack.Message" class="form-control py-3 px-4" rows="5" required="required" placeholder="Message"></textarea>
                            <span asp-validation-for="@Model.FeedBack.Message" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary py-3 px-5" />

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- FeedBack End -->
